  <script>
    // ------------------------------for searching a product--------------------------------

    let search = document.getElementById("search-box");
    search.addEventListener("input", () => {
      let inputVal = search.value.toUpperCase();
      let searchitem = document.getElementsByClassName("product-images");
      console.log(searchitem);
      Array.from(searchitem).forEach(function (element) {
        let searchName = element.getElementsByTagName("a")[0].innerText;
        console.log(searchName);
        if (searchName.includes(inputVal)) {
          element.style.display = "block";
        } else {
          element.style.display = "none";
        }
      });
    });
  </script>
